# This file contains defaults for ENV variables

# ------------------
# Framework
# ------------------

YII_DEBUG       = 1
YII_ENV         = dev

# ------------------
# Application
# ------------------

APP_NAME        = my-app
APP_ADMIN_EMAIL             = admin@myapp.local

# ------------------
# Database
# ------------------

DATABASE_DSN_BASE       = "mysql:host=localhost;port=3306"
DATABASE_DSN_DB         = "yii2_app"
DATABASE_DSN            = "${DATABASE_DSN_BASE};dbname=${DATABASE_DSN_DB}"
DATABASE_USER           = "root"
DATABASE_PASSWORD       = "123"
DATABASE_TABLE_PREFIX   = ""
DATABASE_CHARSET        = "utf8"

# ------------------
# Configuration
# ------------------

CONFIG_USE_CACHE = 0


# ------------------
# Other params
# ------------------

FOO     = bar
BAR     = baz
NVAR1   = "Hello"
NVAR2   = "World!"
NVAR3   = "${NVAR1} ${NVAR2}"

