{
    "name": "sidekit/config",
    "description": "Configuration kit for Yii applications",
    "keywords": ["yii2", "kit", "configuration", "project template"],
    "homepage": "https://2amigos.us/",
    "type": "extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/sidekit/config/issues?state=open",
        "source": "https://github.com/sidekit/config"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "league/container": "^2.2",
        "vlucas/phpdotenv": "^2.4",
        "symfony/finder": "^3.1",
        "symfony/console": "~2.8|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "squizlabs/php_codesniffer": "^2.7",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpmd/phpmd": "^2.4"
    },
    "config": {
        "process-timeout": 1800
    },
    "autoload" : {
        "psr-4": {
            "SideKit\\Config\\": ["./src", "./tests/"]
        }
    }
}
